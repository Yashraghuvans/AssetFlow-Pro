<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Serial_Number_Format_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  NOT(ISBLANK(SerialNumber)),
  NOT(REGEX(SerialNumber, &quot;[A-Z0-9]{8,20}&quot;))
)</errorConditionFormula>
    <errorDisplayField>SerialNumber</errorDisplayField>
    <errorMessage>Serial number must be 8-20 alphanumeric characters</errorMessage>
</ValidationRule>
